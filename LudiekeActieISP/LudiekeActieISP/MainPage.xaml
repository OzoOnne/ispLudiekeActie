<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LudiekeActieISP.MainPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#42522B">

    <ScrollView>
        <Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto"
              ColumnDefinitions="*,*" 
              ColumnSpacing="10" 
              RowSpacing="15"
              Padding="20">

            <Label Text="Inter Se Per Ignem Ludieke Actie"
                   FontSize="28" FontAttributes="Bold" TextColor="White"
                   HorizontalOptions="Center" HorizontalTextAlignment="Center"
                   Grid.Row="0" Grid.ColumnSpan="2"/>

            <Image Grid.Row="1" Grid.ColumnSpan="2"
                   Source="isplogo.png" Aspect="AspectFit"
                   HorizontalOptions="Center" HeightRequest="500">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnLogoClicked" NumberOfTapsRequired="2" />
                </Image.GestureRecognizers>
            </Image>

            <Border Grid.Row="2" Grid.Column="0" StrokeShape="RoundRectangle 10" BackgroundColor="#145235" Padding="10" StrokeThickness="0">
                <VerticalStackLayout Spacing="2">
                    <Label Text="Waarde per KM" FontSize="16" TextColor="#B0BEC5" HorizontalOptions="Center" />
                    <Label Text="{Binding BedragPerKm, StringFormat='€ {0:F2}'}" FontSize="22" TextColor="White" FontAttributes="Bold" HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Border>

            <Border Grid.Row="2" Grid.Column="1" StrokeShape="RoundRectangle 10" BackgroundColor="#145235" Padding="10" StrokeThickness="0">
                <VerticalStackLayout Spacing="2">
                    <Label Text="Afstand (KM)" FontSize="16" TextColor="#B0BEC5" HorizontalOptions="Center" />
                    <Label Text="{Binding GefietsteKilometers, StringFormat='{0:F1} km'}" FontSize="22" TextColor="White" FontAttributes="Bold" HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Border>

            <Border Grid.Row="3" Grid.Column="0" StrokeShape="RoundRectangle 10" BackgroundColor="#145235" Padding="10" StrokeThickness="0">
                <VerticalStackLayout Spacing="2">
                    <Label Text="Extra Donaties" FontSize="16" TextColor="#B0BEC5" HorizontalOptions="Center" />
                    <Label Text="{Binding DagDonaties, StringFormat='€ {0:N2}'}" FontSize="22" TextColor="White" FontAttributes="Bold" HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Border>

            <Border Grid.Row="3" Grid.Column="1" StrokeShape="RoundRectangle 10" BackgroundColor="#146235" Padding="10" StrokeThickness="0">
                <VerticalStackLayout Spacing="2">
                    <Label Text="Totaal" FontSize="16" TextColor="#FFEBEE" HorizontalOptions="Center" FontAttributes="Bold"/>
                    <Label Text="{Binding TotaalGedoneerd, StringFormat='€ {0:N2}'}" FontSize="22" TextColor="White" FontAttributes="Bold" HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Border>

            <VerticalStackLayout Grid.Row="4" Grid.ColumnSpan="2" Spacing="15" Margin="0,10,0,50"
                                 IsVisible="{Binding IsInputVisible}">

                <BoxView HeightRequest="1" Color="Gray" Opacity="0.5" />
                <Label Text="Gegevens Invoeren (Admin)" TextColor="White" FontAttributes="Bold" FontSize="18"/>

                <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                    <VerticalStackLayout Grid.Column="0">
                        <Label Text="KM Toevoegen" TextColor="#B0BEC5"/>
                        <Entry Text="{Binding InputKilometers}" Placeholder="0" Keyboard="Numeric" BackgroundColor="White" TextColor="Black"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout Grid.Column="1">
                        <Label Text="Donatie Toevoegen (€)" TextColor="#B0BEC5"/>
                        <Entry Text="{Binding InputDagDonaties}" Placeholder="0.00" Keyboard="Numeric" BackgroundColor="White" TextColor="Black"/>
                    </VerticalStackLayout>
                </Grid>

                <Button Text="TOEVOEGEN AAN TOTAAL" Clicked="Button_Clicked" BackgroundColor="#E0E0E0" TextColor="#145235" FontAttributes="Bold" CornerRadius="10" HeightRequest="50"/>
            </VerticalStackLayout>

        </Grid>
    </ScrollView>
</ContentPage>