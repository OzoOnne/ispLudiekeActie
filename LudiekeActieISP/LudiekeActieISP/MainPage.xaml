<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LudiekeActieISP.MainPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#42522B">


    <Grid RowDefinitions="Auto, Auto, Auto"
          ColumnDefinitions="*,*" 
          ColumnSpacing="15" 
          Padding="20">

        <Label Text="Inter Se Per Ignem Ludieke Actie"
               FontSize="30"
               FontAttributes="Bold"
               TextColor="White"
               HorizontalOptions="Center"
               HorizontalTextAlignment="Center"
               Grid.Row="0"
               Grid.Column="0"
               Grid.ColumnSpan="2"
               Margin="0,0,0,25"/>

        <Image Grid.Row="1"
               Grid.ColumnSpan="2"
               Source="isplogo.png" 
               Aspect="AspectFit"
               HorizontalOptions="Center"
               HeightRequest="500"
               Margin="0,0,0,25"/>

        <Border Grid.Row="2"
                Grid.Column="0"
                StrokeShape="RoundRectangle 10"
                StrokeThickness="0"
                BackgroundColor="#145235"
                Padding="15">
            
            <VerticalStackLayout Spacing="5">
                <Label Text="Bedrag Per KM"
                       FontSize="25"
                       TextColor="#B0BEC5" 
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />

                <Label Text="{Binding BedragPerKm}"
                       FontSize="30"
                       TextColor="White"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />
            </VerticalStackLayout>
        </Border>

        <Border Grid.Row="2"
                Grid.Column="1"
                StrokeShape="RoundRectangle 10"
                StrokeThickness="0"
                BackgroundColor="#145235"
                Padding="15">
            <VerticalStackLayout Spacing="5">
                <Label Text="Totaal Gedoneerd"
                       FontSize="25"
                       TextColor="#B0BEC5"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />

                <Label Text="{Binding TotaalGedoneerd}"
                       FontSize="30"
                       TextColor="White"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />
            </VerticalStackLayout>
        </Border>

    </Grid>


</ContentPage>
